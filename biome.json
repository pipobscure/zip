{
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"defaultBranch": "main"
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single"
		}
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineWidth": 120,
		"lineEnding": "lf"
	},
	"linter": {
		"rules": {
			"style": {
				"noParameterAssign": "off"
			},
			"suspicious": {
				"noExplicitAny": "off",
				"noCatchAssign": "off",
				"noAssignInExpressions": "off"
			}
		}
	}
}
